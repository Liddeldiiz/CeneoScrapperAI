{% extends "layout.html.jinja" %}

{% block middle %}
    <h2> Opinions extraction </h2>
    {% if form.productID.errors %}
        <div class="alert alert-danger alert-danger alert-dismissible fade show" role="alert">
            {% for error in form.productID.errors %}
                <p><i i class="bi bi-exclamation-triangle-fill"></i>{{ error }}</p>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
    <form method="POST" action="{{ url_for('extract') }}" style="color: #E9F1F7;">
        {{ form.csrf_token }}
        {{ form.productID.label }} {{ form.productID(size=20) }}
        {{ form.submit(class_="btn btn-info")}}
    </form>
{% endblock middle %}